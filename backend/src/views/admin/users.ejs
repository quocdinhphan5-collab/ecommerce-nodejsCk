<%- include('../partials/header') %>

<h1 class="mt-3 mb-4">Quản lý người dùng</h1>

<form class="row g-2 mb-3" method="get" action="/admin/users">
  <div class="col-md-4">
    <input
      type="text"
      name="q"
      class="form-control"
      placeholder="Tìm theo tên hoặc email..."
      value="<%= (query && query.q) || '' %>"
    >
  </div>
  <div class="col-md-3">
    <select name="role" class="form-select">
      <option value="all"   <%= query.role === 'all'   ? 'selected' : '' %>>Tất cả vai trò</option>
      <option value="user"  <%= query.role === 'user'  ? 'selected' : '' %>>User</option>
      <option value="admin" <%= query.role === 'admin' ? 'selected' : '' %>>Admin</option>
    </select>
  </div>
  <div class="col-md-3">
    <select name="status" class="form-select">
      <option value="all"      <%= query.status === 'all'      ? 'selected' : '' %>>Tất cả trạng thái</option>
      <option value="active"   <%= query.status === 'active'   ? 'selected' : '' %>>Đang hoạt động</option>
      <option value="blocked"  <%= query.status === 'blocked'  ? 'selected' : '' %>>Đã khoá</option>
    </select>
  </div>
  <div class="col-md-2">
    <button class="btn btn-primary w-100">Lọc</button>
  </div>
</form>

<table class="table table-striped align-middle">
  <thead>
    <tr>
      <th>STT</th>
      <th>Họ tên</th>
      <th>Email</th>
      <th>Điểm tích luỹ</th>
      <th>Trạng thái</th>
      <th>Ngày tạo</th>
      <th>Thao tác</th>
    </tr>
  </thead>
  <tbody>
    <% if (!users || !users.length) { %>
      <tr>
        <td colspan="8" class="text-center">Chưa có người dùng</td>
      </tr>
    <% } else { %>
      <% users.forEach(function(u, idx) { %>
        <tr>
          <td><%= idx + 1 %></td>
          <td><%= u.fullName %></td>
          <td><%= u.email %></td>
          <td><%= u.loyaltyPoints || 0 %></td>
          <td>
            <form method="post" action="/admin/users/<%= u._id %>/toggle-active">
              <button class="btn btn-sm <%= u.isActive ? 'btn-success' : 'btn-secondary' %>">
                <%= u.isActive ? 'Đang hoạt động' : 'Đã khoá' %>
              </button>
            </form>
          </td>
          <td><%= new Date(u.createdAt).toLocaleString('vi-VN') %></td>
          <td>
            <a href="/admin/users/<%= u._id %>/edit" class="btn btn-sm btn-outline-dark">
              Sửa
            </a>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<%- include('../partials/footer') %>
