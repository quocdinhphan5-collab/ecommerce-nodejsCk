<%- include('../partials/header') %>

<h1>Mã giảm giá</h1>

<form method="post" action="/admin/discounts" class="row g-2 mb-3">
  <div class="col-md-3">
    <input type="text" name="code" class="form-control" placeholder="Mã (5 ký tự)" required>
  </div>
  <div class="col-md-3">
    <input type="number" name="discountValue" class="form-control" placeholder="Giá trị giảm (đ)" required>
  </div>
  <div class="col-md-3">
    <input type="number" name="usageLimit" class="form-control" placeholder="Số lần dùng (tối đa 10)" value="10">
  </div>
  <div class="col-md-3">
    <button class="btn btn-primary w-100">Tạo mã</button>
  </div>
</form>

<table class="table">
  <thead>
  </thead>
  <tbody>
    <% discounts.forEach(d => { %>
      <tr>
        <td><%= d.code %></td>
        <td><%= d.discountValue.toLocaleString('vi-VN') %> ₫</td>
        <td><%= d.usageCount %> / <%= d.usageLimit %></td>
        <td><%= d.createdAt.toLocaleString('vi-VN') %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>