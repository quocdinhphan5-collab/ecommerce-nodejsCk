<%- include('../partials/header') %>

<h1>Đơn hàng của tôi</h1>

<table class="table">
  <thead>
    <tr>
      <th>Mã đơn</th>
      <th>Ngày đặt</th>
      <th>Tổng tiền</th>
      <th>Trạng thái</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach(o => { %>
      <tr>
        <td><%= o._id %></td>
        <td><%= o.createdAt.toLocaleString('vi-VN') %></td>
        <td><%= o.totalAmount.toLocaleString('vi-VN') %> ₫</td>
        <td><span class="badge bg-info"><%= o.status %></span></td>
        <td><a href="/my-orders/<%= o._id %>" class="btn btn-sm btn-outline-primary">Xem</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>